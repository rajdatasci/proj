

<div class="container">
  <img src="/images/back1.jpg" width="1100" Height ="200" alt="Winnipeg">
</div>
<hr>
<h2 style="text-align:center">Add New Upcoming Event</h2>
<p style="text-align:center"> Welcome to Winnipeg Events Website </p>
<hr>



<form action="/home/index" method="post" enctype="multipart/form-data">
<div class="container" style="background-color:lightblue">
    <br>
    <div class="form-group">
        <input type="text" name="Name" class="form-control" required placeholder="Event Name">
    </div>
    <div class="form-group">
        <input type="text" name="Location" class="form-control" required placeholder="Event Location">
    </div>
    <div class ="form-row">
         <div class="form-group col-md-4">
            <input type="date" name="Date" class="form-control" required placeholder="Date of Event">
         </div>
         <div class="form-group col-md-3">
             <select name="TimeStart" class="form-control">
                <option selected>Time...</option>
                     @for(var i=1;i<=12;i++)
                       {
                          <option>@i:00</option>
                         }     
            </select>
         </div>
         <div class="form-group col-md-1">
            <select name="ts" class="form-control">
                 <option selected>AM</option>
                    
                 <option>PM</option>
             </select>        
         </div>
        <div class="form-group col-md-3">
            <select name="TimeFinish" class="form-control">

             <option selected>Time...</option>
                     @for(var i=1;i<=12;i++)
                       {
                          <option>@i:00</option>
                         }     
            </select>
         </div>
         <div class="form-group col-md-1">
            <select name="tf" class="form-control">
                 <option selected>AM</option>
                    
                 <option>PM</option>
             </select>   
        </div>     

    </div>
       
    <div class="form-group">
        <input type="text" name="Details" class="form-control" required placeholder="Add details">
    </div>
    <div class="form-group">
        <input type="file" name="picture" class="form-control" placeholder="Picture">
    </div>
    <input type="submit" class="btn btn-primary" value="Add Event">
</div>
</form>