@{
  var error = (bool)ViewData["error"];
  var loginSuccessfull = (bool)ViewData["loginSuccessfull"];
  var userNotFound = (bool)ViewData["userNotFound"];
}

<h2>Login Page</h2>

@if(error)
{
  <div class="alert alert-error" role="alert">
    Something went wrong!
  </div>
}

@if(loginSuccessfull)
{
  <div class="alert alert-error" role="alert">
    Logged in!
  </div>
}

@if(userNotFound)
{
  <div class="alert alert-error" role="alert">
    User not found. Please <a href="/auth/register">register</a> here
  </div>
}


<form action="/auth/login" method="post">
 <div class="panel" style="border: 1px solid lightgrey; margin-top: 20px; position:relative; background-color: lightblue;">
        <div class="panel-body">
          <div class="row">
            <div class ="col-sm-8">
             <div class="form-group" >
                <input type="email" class="form-control" name="email" placeholder="Email" required>
             </div>
             <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Password" required>
             </div>
            </div>
            <div class ="col-sm-4">
              <div class ="form-group">
                <img src ="/images/login.jpg" alt="LOGIN ICON" width=180>
              </div>
            </div>
          </div>

           <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </div>
</form>
<form action="/auth/register" method="post">
 <div class="panel" style="border: 1px solid lightgrey; margin-top: 20px; position:relative; background-color: lightblue;">
        <div class="panel-body">
         
         <h2>New USer! Register Here</h2>
         <button type="submit" class="btn btn-primary">Register</button>
        </div>
        
</form>
